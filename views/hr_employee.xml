<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_inherit_form_view" model="ir.ui.view">
            <field name="name">ProjectName.res_partner_inherit.form</field>
            <field name="model">ProjectName.res_partner_inherit</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="example_title"/>
                            <h1>
                                <field name="example_title" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date"/>
                            </group>
                            <group>
                                <field name="example_field"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_partner_inherit_tree_view" model="ir.ui.view">
            <field name="name">ProjectName.res_partner_inherit.tree</field>
            <field name="model">ProjectName.res_partner_inherit</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="create_date"/>
                    <field name="example_field"/>
                </tree>
            </field>
        </record>

        <record id="res_partner_inherit_search_view" model="ir.ui.view">
            <field name="name">ProjectName.res_partner_inherit.search</field>
            <field name="model">ProjectName.res_partner_inherit</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="example_field" domain="[]"
                                context="{'group_by':'example_field'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="res_partner_inherit_act_window" model="ir.actions.act_window">
            <field name="name">ModelTitle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ProjectName.res_partner_inherit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="ModelTitle" id="res_partner_inherit_menu" parent="your_root_menu" action="res_partner_inherit_act_window"/>

    </data>
</odoo>